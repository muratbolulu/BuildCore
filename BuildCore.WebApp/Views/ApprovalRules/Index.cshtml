@model IEnumerable<BuildCore.ApprovalManagement.Application.DTOs.ApprovalRuleDto>

@{
    ViewData["Title"] = "Onay Kuralları";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Onay Kuralları</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Onay Kuralı Ekle</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ad</th>
                        <th>Tip</th>
                        <th>Durum</th>
                        <th>Zincir Sayısı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rule in Model)
                    {
                        <tr>
                            <td>@rule.Name</td>
                            <td>@rule.RuleType</td>
                            <td>
                                <span class="badge bg-@(rule.IsActive ? "success" : "secondary")">
                                    @(rule.IsActive ? "Aktif" : "Pasif")
                                </span>
                            </td>
                            <td>@rule.ApprovalChains.Count</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@rule.Id" class="btn btn-sm btn-info">Detay</a>
                                    <a asp-action="Edit" asp-route-id="@rule.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@rule.Id" class="btn btn-sm btn-danger">Sil</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">Henüz onay kuralı bulunmamaktadır.</p>
        </div>
    }
</div>
