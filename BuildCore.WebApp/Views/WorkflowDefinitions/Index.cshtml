@model IEnumerable<BuildCore.WorkflowEngine.Application.DTOs.WorkflowDefinitionDto>

@{
    ViewData["Title"] = "İş Akışı Tanımları";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>İş Akışı Tanımları</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni İş Akışı Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ad</th>
                        <th>Açıklama</th>
                        <th>Adım Sayısı</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var workflow in Model)
                    {
                        <tr>
                            <td>@workflow.Name</td>
                            <td>@(workflow.Description ?? "-")</td>
                            <td>@workflow.Steps.Count</td>
                            <td>
                                <span class="badge bg-success">Aktif</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@workflow.Id" class="btn btn-sm btn-info">Detay</a>
                                    <a asp-action="Edit" asp-route-id="@workflow.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@workflow.Id" class="btn btn-sm btn-danger">Sil</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">Henüz iş akışı tanımı bulunmamaktadır.</p>
        </div>
    }
</div>
