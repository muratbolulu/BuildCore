@model IEnumerable<BuildCore.WorkflowEngine.Application.DTOs.WorkflowInstanceDto>

@{
    ViewData["Title"] = "İş Akışı Örnekleri";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>İş Akışı Örnekleri</h2>
        <a asp-action="Start" class="btn btn-primary">
            <i class="bi bi-play-circle"></i> Yeni İş Akışı Başlat
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>İş Akışı Adı</th>
                        <th>Durum</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Mevcut Adım</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var instance in Model)
                    {
                        <tr>
                            <td>@instance.WorkflowDefinitionName</td>
                            <td>
                                <span class="badge bg-@(instance.Status == "Completed" ? "success" : instance.Status == "Cancelled" ? "danger" : "warning")">
                                    @instance.Status
                                </span>
                            </td>
                            <td>@(instance.StartedAt?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                            <td>@(instance.CurrentStepName ?? "-")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@instance.Id" class="btn btn-sm btn-info">Detay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">Henüz iş akışı örneği bulunmamaktadır.</p>
        </div>
    }
</div>
