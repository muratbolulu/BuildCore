@model IEnumerable<BuildCore.ApprovalManagement.Application.DTOs.ApprovalRequestDto>

@{
    ViewData["Title"] = "Onay Talepleri";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Onay Talepleri</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Onay Talebi</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Onay Kuralı</th>
                        <th>Talep Tipi</th>
                        <th>Durum</th>
                        <th>Talep Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.ApprovalRuleName</td>
                            <td>@request.RequestType</td>
                            <td>
                                <span class="badge bg-@(request.Status == "Approved" ? "success" : request.Status == "Rejected" ? "danger" : "warning")">
                                    @request.Status
                                </span>
                            </td>
                            <td>@request.RequestedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-sm btn-info">Detay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">Henüz onay talebi bulunmamaktadır.</p>
        </div>
    }
</div>
