@{
    var isLoggedIn = Context.Session.GetString("UserId") != null;
    var userName = Context.Session.GetString("UserName");
    var userEmail = Context.Session.GetString("UserEmail");
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuildCore.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/BuildCore.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    @if (isLoggedIn)
    {
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
            <div class="position-sticky pt-3 sidebar-sticky">
                <div class="text-center mb-4">
                    <h5 class="text-primary">BuildCore</h5>
                    <small class="text-muted">HR Management</small>
                </div>
                
                <!-- Sekmeli Menü -->
                <ul class="nav nav-pills flex-column mb-auto" id="sidebarTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" 
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house"></i> Ana Sayfa
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")" 
                           asp-controller="Users" asp-action="Index">
                            <i class="bi bi-people"></i> Kullanıcılar
                        </a>
                    </li>
                    
                    <li class="sidebar-heading mt-3">İş Akışları</li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "WorkflowDefinitions" ? "active" : "")" 
                           asp-controller="WorkflowDefinitions" asp-action="Index">
                            <i class="bi bi-diagram-3"></i> İş Akışı Tanımları
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "WorkflowInstances" ? "active" : "")" 
                           asp-controller="WorkflowInstances" asp-action="Index">
                            <i class="bi bi-play-circle"></i> İş Akışı Örnekleri
                        </a>
                    </li>
                    
                    <li class="sidebar-heading mt-3">Onaylar</li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ApprovalRules" ? "active" : "")" 
                           asp-controller="ApprovalRules" asp-action="Index">
                            <i class="bi bi-check-circle"></i> Onay Kuralları
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ApprovalRequests" ? "active" : "")" 
                           asp-controller="ApprovalRequests" asp-action="Index">
                            <i class="bi bi-file-earmark-check"></i> Onay Talepleri
                        </a>
                    </li>
                    
                    <li class="sidebar-heading mt-3">Bildirimler</li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "NotificationTemplates" ? "active" : "")" 
                           asp-controller="NotificationTemplates" asp-action="Index">
                            <i class="bi bi-file-text"></i> Bildirim Şablonları
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Notifications" ? "active" : "")" 
                           asp-controller="Notifications" asp-action="Index">
                            <i class="bi bi-bell"></i> Bildirimler
                        </a>
                    </li>
                </ul>
                
                <hr class="my-3">
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-gear"></i> Ayarlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="nav-link border-0 bg-transparent text-start w-100" style="cursor: pointer;">
                                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
        
        <!-- Top Navbar -->
        <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow" style="margin-left: 240px;">
            <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" href="#">BuildCore</a>
            <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-nav">
                <div class="nav-item text-nowrap">
                    <div class="dropdown">
                        <a class="nav-link px-3 dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @userName
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="#">@userEmail</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Profil</a></li>
                            <li>
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item">Çıkış Yap</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        
        <!-- Main Content -->
        <main class="main-content">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
        
        <footer class="border-top footer text-muted" style="margin-left: 240px;">
            <div class="container">
                &copy; 2026 - BuildCore.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }
    else
    {
        <!-- Login olmadan basit header -->
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BuildCore.WebApp</a>
                    <div class="navbar-nav ms-auto">
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">Giriş Yap</a>
                        <a class="nav-link" asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
                    </div>
                </div>
            </nav>
        </header>
        
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2026 - BuildCore.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
