@model IEnumerable<BuildCore.Notification.Application.DTOs.NotificationDto>

@{
    ViewData["Title"] = "Bildirimler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Bildirimler</h2>
        <a asp-action="Send" class="btn btn-primary">Yeni Bildirim Gönder</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Alıcı</th>
                        <th>Tip</th>
                        <th>Konu</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var notification in Model)
                    {
                        <tr>
                            <td>@notification.RecipientUserId</td>
                            <td>@notification.NotificationType</td>
                            <td>@notification.Subject</td>
                            <td>
                                <span class="badge bg-@(notification.Status == "Delivered" ? "success" : notification.Status == "Failed" ? "danger" : "warning")">
                                    @notification.Status
                                </span>
                            </td>
                            <td>@notification.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@notification.Id" class="btn btn-sm btn-info">Detay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">Henüz bildirim bulunmamaktadır.</p>
        </div>
    }
</div>
