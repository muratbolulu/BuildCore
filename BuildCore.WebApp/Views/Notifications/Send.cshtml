@model BuildCore.Notification.Application.DTOs.SendNotificationDto

@{
    ViewData["Title"] = "Bildirim Gönder";
}

<div class="container mt-4">
    <h2>Bildirim Gönder</h2>
    <hr />

    <form asp-action="Send" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="NotificationType" class="form-label"></label>
            <select asp-for="NotificationType" class="form-control">
                <option value="Email">Email</option>
                <option value="SMS">SMS</option>
                <option value="Push">Push</option>
                <option value="InApp">InApp</option>
            </select>
            <span asp-validation-for="NotificationType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RecipientUserId" class="form-label"></label>
            <input asp-for="RecipientUserId" class="form-control" />
            <span asp-validation-for="RecipientUserId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Subject" class="form-label"></label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Body" class="form-label"></label>
            <textarea asp-for="Body" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Gönder</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
