@model BuildCore.Notification.Application.DTOs.NotificationTemplateDto

@{
    ViewData["Title"] = "Bildirim Şablonu Sil";
}

<div class="container mt-4">
    <h2>Bildirim Şablonu Sil</h2>
    <hr />

    <div class="alert alert-warning">
        <p>Bu bildirim şablonunu silmek istediğinizden emin misiniz?</p>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Ad:</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Tip:</dt>
        <dd class="col-sm-9">@Model.TemplateType</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
