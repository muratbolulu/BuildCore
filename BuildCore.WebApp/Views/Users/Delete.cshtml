@model BuildCore.HumanResources.Application.DTOs.UserDto

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<div class="container mt-4">
    <h2>Kullanıcı Sil</h2>
    <hr />

    <div class="alert alert-warning">
        <h5>Bu kullanıcıyı silmek istediğinizden emin misiniz?</h5>
        <p class="mb-0">Bu işlem geri alınamaz. Kullanıcı soft delete ile silinecektir.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">@Model.FullName</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">E-posta:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Telefon:</dt>
                <dd class="col-sm-9">@(Model.PhoneNumber ?? "-")</dd>

                <dt class="col-sm-3">Departman:</dt>
                <dd class="col-sm-9">@(Model.Department ?? "-")</dd>

                <dt class="col-sm-3">Pozisyon:</dt>
                <dd class="col-sm-9">@(Model.Position ?? "-")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
