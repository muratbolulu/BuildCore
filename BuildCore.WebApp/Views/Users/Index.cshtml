@model IEnumerable<BuildCore.HumanResources.Application.DTOs.UserDto>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kullanıcılar</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Kullanıcı Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>E-posta</th>
                        <th>Telefon</th>
                        <th>Departman</th>
                        <th>Pozisyon</th>
                        <th>İşe Başlama Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@(user.PhoneNumber ?? "-")</td>
                            <td>@(user.Department ?? "-")</td>
                            <td>@(user.Position ?? "-")</td>
                            <td>@(user.HireDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Detay</a>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Sil</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">Henüz kullanıcı bulunmamaktadır.</p>
        </div>
    }
</div>
